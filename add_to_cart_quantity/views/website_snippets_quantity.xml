<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="new_snippet_options" inherit_id="website.snippet_options" name="e-commerce snippet ">
        <xpath expr="." position="inside">
            <div data-js="WebsiteSaleGridLayout" data-page-options="true" groups="website.group_website_designer"
                 data-no-check="true"
                 string="Products Page" data-target="#products_grid .o_wsale_products_grid_table_wrapper > table">
                <we-row string="Buttons" class="o_we_full_row">
                    <we-button title="Add Quantity" class="fa fa-fw fa-shopping-cart o_we_add_to_cart_btn"
                               data-customize-website-views="website_sale.products_show_quantity"
                               data-no-preview="true"
                               data-reload="/"/>
                </we-row>
            </div>
        </xpath>
    </template>
</odoo>
