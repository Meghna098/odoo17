<odoo>
    <record id="sale_order_delivery" model="ir.ui.view">
        <field name="name">sale.order.delivery.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button type="object" name="action_sales_delivery" string="Create delivery"/>
            </xpath>
            <xpath expr="//button[@name='action_view_delivery']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
